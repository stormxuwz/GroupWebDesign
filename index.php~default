  $hostname = $_ENV["HOSTNAME"];
  $http = "http://";
  $vosquota_command = "/usr/afsws/bin/fs listquota " . $document_root . " | tail -1";
  $vosquota_output = preg_split("/[\s,]+/", exec($vosquota_command));
  $volume = $vosquota_output[0];
  $quota = $vosquota_output[1];

  if(eregi("internal", $_SERVER["HTTP_HOST"]) )
  {
    $internal_site = 1;
#    $website .= dirname($_SERVER["REQUEST_URI"]);
    $website .= dirname($_SERVER["SCRIPT_NAME"]);
    $document_root = dirname($_SERVER["SCRIPT_FILENAME"]);
    $http = "https://";
  }

